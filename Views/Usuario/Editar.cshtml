@using Cadastro_de_contatos.Enum
@model UsuarioModel
@{
    ViewData["Title"] = "Cadastro de Usuarios";
}



<div class="text-center">  

<h1 class="display-4"  > Cadastro de Usuario</h1>



</div>

<form asp-action="Alterar" asp-controller="Usuario" method="post">
    <input type="hidden" asp-for="Id" />
  <div class="mb-3">
    <label for="nome" class="form-label">Nome</label>
    <input type="text" asp-for="Nome" class="form-control"  placeholder="Digite seu usuario">
     @Html.ValidationMessageFor(x => x.Nome)
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email </label>
    <input type="text" asp-for="Email" class="form-control"  placeholder="seu email">
     @Html.ValidationMessageFor(x => x.Email)
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">Login </label>
    <input type="text" asp-for="Login" class="form-control"  placeholder="seu Login">
     @Html.ValidationMessageFor(x => x.Login)
  </div>
  <div class="mb-3">
       <select asp-for="Perfil" class="form-control">
        <option value="0"> Perfil do Usuario</option>
         <option value="@PerfilEnum.Admin"> Admin</option>
          <option value="@PerfilEnum.Padrao"> Padrão</option>
    </select>
    
  </div>

   <div class="mb-3">
    <label for="email" class="form-label">Senha </label>
    <input type="password" asp-for="Senha" class="form-control"  placeholder="seu Login">
     @Html.ValidationMessageFor(x => x.Senha)
  </div>
 
 
  <button type="submit" class="btn btn-primary btn-block" >Editar</button>
  <a class="btn btn-secondary btn-block" asp-controller="Usuarios" asp-action="Index">Voltar</a>
</form>